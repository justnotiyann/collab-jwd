<div class="container" style="margin-top: 10em">
  <div class="row d-flex justify-content-center">
    <div class="col-4">
      <h3 class="fw-bold text-success">Form Daftar User</h3>
      <p>Harap masukkan data dengan benar</p>
    </div>
    <div class="col-8">
      <form action="/daftar/add" method="post">
        <div class="row">
          <div class="col-6">
            <div class="mb-3">
              <label for="nama" class="form-label fw-bold">Masukkan nama</label>
              <input type="text" class="form-control" name="nama" id="nama" aria-describedby="helpId" placeholder="Masukkan nama anda" />
            </div>
          </div>
          <div class="col-6">
            <div class="mb-3">
              <label for="email" class="form-label fw-bold">Masukkan email</label>
              <input type="email" class="form-control" name="email" id="email" aria-describedby="helpId" placeholder="Masukkan email anda" />
            </div>
          </div>
          <div class="col">
            <div class="mb-3">
              <label for="password" class="form-label fw-bold">Masukkan Password</label>
              <input type="password" class="form-control" name="password" id="password" aria-describedby="helpId" placeholder="Masukkan password anda" />
            </div>
          </div>
          <div class="col">
            <div class="mb-3">
              <label for="confirm" class="form-label fw-bold">Konfirmasi Password</label>
              <input type="password" class="form-control" name="confirm" id="confirm" aria-describedby="helpId" placeholder="Masukkan password anda" />
            </div>
          </div>
          <div class="col-12">
            <div class="mb-3">
              <label for="nomor_telepon" class="form-label fw-bold">Masukkan Nomor Telepon</label>
              <input type="tel" maxlength="12" minlength="9" class="form-control" name="nomor_telepon" id="nomor_telepon" aria-describedby="helpId" placeholder="Masukkan nomor anda" />
            </div>
          </div>
          <div class="col-12 mb-3">
            <label class="form-check-label fw-bold mb-3" for="jenis_kelamin"> Pilih Gender</label>
            <div class="form-check">
              <input class="form-check-input" type="radio" value="Laki-laki" name="jenis_kelamin" id="jenis_kelamin" />
              <label class="form-check-label" for="jenis_kelamin"> Laki-laki </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" value="perempuan" name="jenis_kelamin" id="jenis_kelamin" />
              <label class="form-check-label" for="jenis_kelamin"> Perempuan </label>
            </div>
          </div>
          <div class="col-12">
            <div class="mb-3">
              <label for="alamat" class="form-label fw-bold">Masukkan Alamat</label>
              <textarea class="form-control" name="alamat" id="alamat" rows="3"></textarea>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-6">
            <input type="reset" value="Reset" class="btn btn-danger form-control" />
          </div>
          <div class="col-6">
            <button class="btn btn-success w-100">Submit Data</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
