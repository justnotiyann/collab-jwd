<div class="container-fluid" style="margin-top: 2em">
  <div class="row mb-3">
    <div class="col-8">
      <h2 class="text-success fw-bold">Data Transaksi Toko Buku</h2>
      <p class="text-muted">Berikut semua data yang disimpan dalam database kami</p>
    </div>
    <div class="col-4">
      <h4>Tambah Data Transaksi</h4>
      <p>
        Link <span><a href="/transaksi/add" style="text-decoration: none" class="text-success fw-bold">Tambah Data Product</a></span>
      </p>
    </div>
  </div>

  <table class="table mt-3 table-hover" id="mytable">
    <thead class="table-success">
      <tr>
        <th scope="col">No</th>
        <th scope="col">Nama</th>
        <th scope="col">Email</th>
        <th scope="col">Nomor Telepon</th>
        <th scope="col">Alamat</th>
        <th scope="col">Judul Buku</th>
        <th scope="col">Harga Buku</th>
        <th scope="col">Sistem Pembayaran</th>
        <th scope="col">Aksi</th>
      </tr>
    </thead>
    <tbody>
      <% i=1 %> <% result.forEach((datas) => { %>
      <tr>
        <td><%= i++ %></td>
        <td><%= datas.nama %></td>
        <td><%= datas.email %></td>
        <td><%= datas.nomor_telepon %></td>
        <td><%= datas.alamat %></td>
        <td><%= datas.judul_buku%></td>
        <td>Rp. <%= datas.harga%></td>
        <td><%= datas.sistem_pembayaran%></td>
        <td>
          <a href="/transaksi/delete/<%= datas.nama %> " onclick="return confirm('Anda yakin?')">
            <button class="btn btn-danger badge">Hapus Data</button>
          </a>
          <br />
          <a href="/transaksi/edit/<%= datas.id %> ">
            <button class="btn btn-warning badge">Edit Data</button>
          </a>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>
