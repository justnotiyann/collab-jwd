<div class="container" style="margin-top: 2em">
  <div class="row mb-3">
    <div class="col-8">
      <h2 class="text-success fw-bold">Data User Toko Buku</h2>
      <p class="text-muted">Berikut semua data yang disimpan dalam database kami</p>
    </div>
    <div class="col-4">
      <h4>Tambah Data User</h4>
      <p>
        Link <span><a href="/user/add" style="text-decoration: none" class="text-success fw-bold">Tambah Data Product</a></span>
      </p>
    </div>
  </div>

  <table class="table mt-3" id="mytable">
    <thead class="table-success">
      <tr>
        <th scope="col">No</th>
        <th scope="col">Nama</th>
        <th scope="col">Email</th>
        <th scope="col">Nomor Hp</th>
        <th scope="col">Jenis Kelamin</th>
        <th scope="col">Alamat</th>
        <th scope="col">Aksi</th>
      </tr>
    </thead>
    <tbody>
      <% i=1 %> <% result.forEach((datas) => { %>
      <tr>
        <td><%= i++ %></td>
        <td><%= datas.nama %></td>
        <td><%= datas.email %></td>
        <td><%= Math.abs(datas.nomor_telepon) %></td>
        <td><%= datas.jenis_kelamin %></td>
        <td><%= datas.alamat %></td>
        <td>
          <a href="/users/delete/<%= datas.nama %>" onclick="return confirm('Anda Yakin ?')">
            <button class="btn btn-danger badge">Hapus Data</button>
          </a>
          <br />
          <a href="/users/edit/<%= datas.id %>">
            <button class="btn btn-warning badge">Edit Data</button>
          </a>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>
