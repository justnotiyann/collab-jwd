<div class="container section-margin p-5">
  <div class="row mb-5">
    <div class="col-6">
      <h3>Halaman Tambah User</h3>
      <p>Perhatikan saat input data, Pastikan masukkan data dengan benar</p>
    </div>
  </div>
  <form action="/users/add" method="post">
    <input type="hidden" clss="form-control" name="id" value="" id="id" required placeholder="Masukkan ID" />
    <div class="row">
      <!-- Nama -->
      <div class="col-4">
        <div class="mb-3">
          <label for="nama" class="form-label fw-bold">Nama User</label>
          <input type="text" class="form-control" name="nama" id="nama" required placeholder="Masukkan nama" />
        </div>
      </div>
      <!-- Email -->
      <div class="col-4">
        <div class="mb-3">
          <label for="email" class="form-label fw-bold">Email user</label>
          <input type="email" class="form-control" name="email" id="email" required placeholder="Masukkan email" />
        </div>
      </div>
      <!-- nomor_telepon -->
      <div class="col-4">
        <div class="mb-3">
          <label for="nomor_telepon	" class="form-label fw-bold">Nomor Telepon</label>
          <input type="tel" class="form-control" name="nomor_telepon" id="nomor_telepon" maxlength="14" minlength="9" required placeholder="Masukkan nomor telepon user" />
        </div>
      </div>
      <!-- password -->
      <div class="col-6">
        <div class="mb-3">
          <label for="password" class="form-label fw-bold">Password User </label>
          <input type="password" class="form-control" maxlength="20" min="9" name="password" id="password" required placeholder="Masukkan password" />
        </div>
      </div>
      <!-- confirmPassword -->
      <div class="col-6">
        <div class="mb-3">
          <label for="confirm" class="form-label fw-bold">Konfirmasi Password</label>
          <input type="password" class="form-control" maxlength="20" min="9" name="confirm" id="confirm" required placeholder="Konfirmasi Password" />
        </div>
      </div>
      <!-- jenis_kelamin -->
      <div class="row">
        <div class="col-6">
          <div class="row">
            <div class="col-6">
              <label for="jenis_kelamin" class="fw-bold mb-2">Jenis Kelamin</label>
            </div>
          </div>
        </div>
        <div class="col-12 mb-3">
          <div class="row">
            <div class="col-6">
              <div class="form-check">
                <input class="form-check-input" type="radio" name="jenis_kelamin" value="laki-laki" />
                <label class="form-check-label" for="jenis_kelamin"> Laki-laki </label>
              </div>
            </div>
            <div class="col-6">
              <div class="form-check">
                <input class="form-check-input" type="radio" name="jenis_kelamin" value="perempuan" />
                <label class="form-check-label" for="jenis_kelamin"> Perempuan </label>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- alamat -->
      <div class="col-12">
        <div class="mb-3">
          <label for="alamat" class="form-label fw-bold">Alamat User</label>
          <textarea class="form-control" name="alamat" id="alamat" rows="3" required placeholder="Masukkan alamat user"></textarea>
        </div>
      </div>
    </div>
    <input type="reset" value="Reset Data" class="btn btn-danger" />
    <button class="btn btn-success">Submit Data</button>
  </form>
</div>
